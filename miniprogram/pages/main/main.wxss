/* pages/main/main.wxss */
.candyImage {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  align-content: space-around;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.candyImage > image {
  height: 120rpx;
  width: 120rpx;
}

.candyImage > text {
  font-size: 12px;
  font-style: initial;
  font-family: serif;
}

.firstLineButtons {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: space-around;
}

.firstLineButtons > button {
  height: 250rpx;
  width: 250rpx;
  align-content: flex-start;
  margin-top: auto;
  margin-left: auto;
  margin-bottom: auto;
  margin-right: auto;
}

.firstLineButtons > button > image {
  height: 150rpx;
  width: 150rpx;
  /* align-content: center; */
}

.firstLineButtons > button > text {
  text-align: center;
  font-family: serif;
  font-size: 12px;
  font-weight: 600;
}

.mainIndexImage {
  align-content: center;
  height: 400rpx;
  width: 400rpx;

}

.mainIndexImage > image {
  height: 300rpx;
  width: 300rpx;
  align-content: center;
}

.mainIndexImage > text {
  text-align: center;
  font-family: serif;
  font-size: 16px;
  font-weight: 700;
}

.secondLineButtons {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: space-around;
}

.secondLineButtons > button {
  height: 250rpx;
  width: 250rpx;
}

.secondLineButtons > button > image {
  height: 150rpx;
  width: 150rpx;
  align-content: center;
}

.secondLineButtons > button > text {
  text-align: center;
  font-family: serif;
  font-size: 12px;
  font-weight: 600;
}


/* 弹窗样式 */
   
 /*mask*/
 .drawer_screen { 
  width: 100%; 
  height: 100%; 
  position: fixed; 
  top: 0; 
  left: 0; 
  z-index: 1000; 
  background: #000; 
  opacity: 0.5; 
  overflow: hidden; 
 } 
   
 /*content*/
 .drawer_box { 
  width: 650rpx; 
  overflow: hidden; 
  position: fixed; 
  top: 50%; 
  left: 0; 
  z-index: 1001; 
  background: #FAFAFA; 
  margin: -150px 50rpx 0 50rpx; 
  border-radius: 3px; 
 } 
   
 .drawer_title{ 
  padding:15px; 
  font: 20px "microsoft yahei"; 
  text-align: center; 
 } 
 .drawer_content { 
  height: 210px; 
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  } 
   
 .btn_ok{ 
  padding: 10px; 
  font: 20px "microsoft yahei"; 
  text-align: center; 
  border-top: 1px solid #E8E8EA; 
  color: #3CC51F; 
 } 
   
