page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }
  
  .userinfo, .uploader, .tunnel {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
  }
  
  .userinfo {
    padding-left: 120rpx;
  }
  
  .userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
  }
  
  .userinfo-avatar[size] {
    width: 200rpx;
  }
  
  
  .userinfo-avatar:after {
    border: none;
  }
  
  .nickname {
    font-size: 60rpx;
    color: black;
    background-size: cover;
    text-align: center;
    padding-left: 0;
    margin-left: 10px;
  }

  .headimage{
      display: flex;
      height: 240rpx;
      justify-content: center;   
      align-items:center;
  }
  .headimage button{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx; 
  }

   